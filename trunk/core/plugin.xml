<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Profiling"
            id="GProf-Eclipse View">
      </category>
      <view
            name="Profiler Results"
            icon="icons/profile.png"
            category="org.eclipse.cdt.gprof.core.views.ProfilingView"
            class="org.eclipse.cdt.gprof.core.views.ProfilingView"
            id="ProfilingView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.cdt.ui.CPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="gprof_eclipse.views.ProfilingView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="actionSet"
            label="Run with Profiling"
            visible="true">
         <action
               class="org.eclipse.cdt.gprof.core.actions.ProfileAction"
               icon="icons/profile.png"
               id="gprof_eclipse.actions.ProfileAction"
               label="Run with Profiling"
               menubarPath="sampleMenu/sampleGroup"
               toolbarPath="sampleGroup"
               tooltip="Run with Profiling">
         </action>
      </actionSet>
   </extension>

</plugin>
